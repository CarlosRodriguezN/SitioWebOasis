@{
    ViewBag.Title = "ActualizarCuentaCorreo";
}

<div class="widget">
    <div class="widget-header">
        <h3><i class="fa fa-edit"></i> INFORMACIÓN - CUENTA DE CORREO </h3>
    </div>
    <div class="widget-content">
        <div class="row">
            <div class="col-md-12">
                <form id="frmValidarCedula" class="form-horizontal" role="form" action="#">
                    @Html.Label("Ingrese su número de cédula: ", 
                                new { @class = "col-sm-4 control-label" })

                    <div class="col-sm-8">
                        @Html.TextBox(  "strNumCedula",
                                        "",
                                        new{id = "strNumCedula",
                                            @class = "form-control",
                                            @style = "font-weight: bold;",
                                            @placehorder = "número de cédula sin guion",
                                            @maxlength = "10" })
                    </div>
                    <hr class="inner-separator">

                    <button id="btnValidarCedula"
                            type="button"
                            class="btn btn-success">
                        <i class="fa fa-check-circle"></i> Verificar número de cédula
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @*  JAVASCRIPT DE GESTION DE CUENTAS DE CORREO  *@
    <script src="~/Content/js/ActualizarCorreo/validarCedula.js?v1.0.9"> </script>
}

