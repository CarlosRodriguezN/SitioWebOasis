@if (Request.IsAuthenticated)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="@Url.Content("~/Content/img/user-avatar_masculino.png")" alt="default_image" />
            <span class="name">@User.Identity.Name.ToString()</span> <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
            <li>
                @Html.ActionLink(Language.es_ES.STR_CERRAR_SESION,
                                    "SignOut",
                                    "Account",
                                    routeValues: null,
                                    htmlAttributes: new{id = "idLogOut",
                                        style = "padding-bottom: 12px;padding-top: 12px;border-style: solid;border-width: thin;"
                                    })
            </li>
        </ul>
    </li>
}
else
{
    <li class="dropdown">
        @Html.ActionLink(Language.es_ES.STR_ACCEDER_SISTEMA_ACADEMICO,
                        "SignIn",
                        "Account",
                        routeValues: null,
                        htmlAttributes: new { id = "loginLink" })       
    </li>
}